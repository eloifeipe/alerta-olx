<%- include ("partials/header.ejs") %>

<%- include ("partials/navbar.ejs") %>
<div class="container text-light">
    <a href="/"><h1>LISTA DE VEICULOS</h1></a>
    <table class="table table-sm table-striped">
        <thead style="text-align: center;">
            <tr>
                <th class="text-light font-weight-bold">TOTAL: <%= veiculos.length %></th>
                <th>
                    <div class="position-fixed">
                        <a href="/configuracoes"><button type="button" class="btn">
                            <img style="max-width: 30px; margin-top: -65px; margin-left: 150px;" src="/img/conf.png" alt="">
                        </button></a>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>

            <% veiculos.forEach(veiculo =>{ %>
                <tr>
                    <td><a href="<%= veiculo.link %>" target="_blank"><img style="max-width: 150px;" src="<%= veiculo.imagem %>" alt=""></a></td>
                    <td class="text-light">
                        <p class="font-weight-bold"><%= veiculo.title %></p>
                        <a href="<%= veiculo.link %>" target="_blank">
                            <h3 class="text-primary"><%= veiculo.valor %></h3>
                        </a>
                        <p><%= veiculo.local %></p>
                        <p><%= veiculo.info %></p>
                    </td>
                </tr>
            <%})%>
        </tbody>
    </table>

</div>

<%- include ("partials/footer.ejs") %>